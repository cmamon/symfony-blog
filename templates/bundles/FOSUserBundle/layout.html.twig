<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{% endblock %}</title>
        <meta http-equiv="content-type" content="text/html" charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
        <link rel="stylesheet/less" type="text/css" href="{{ asset('less/styles.less') }}" />
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    </head>
    <body>
        <header>
            <nav class="navbar is-light" role="navigation" aria-label="main navigation">
              <div class="navbar-brand">
                <a class="navbar-item" href="{{ url('index') }}">
                    Blog
                </a>
                <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBlog">
                  <span aria-hidden="true"></span>
                  <span aria-hidden="true"></span>
                  <span aria-hidden="true"></span>
                </a>
              </div>

              <div id="navbarBlog" class="navbar-menu">
                <div class="navbar-end">
                  <div class="navbar-item">
                    <div class="buttons">
                      <a class="button is-primary" href="{{ path('register') }}">
                        <strong>Sign up</strong>
                      </a>
                      <a class="button is-light" href="{{ path('login') }}">
                        Log in
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </nav>
        </header>

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div class="content">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
        <footer class="footer">
            <div class="content has-text-centered">
                <p>
                    <strong>Symfony blog</strong> by
                    <a href="https://github.com/cmamon">Christophe QUENETTE</a> and
                    <a href="https://github.com/stremor-03">Sullyvan TREMOR</a>.
                </p>
            </div>
        </footer>
        {% block javascripts %}{% endblock %}
    </body>
</html>
