{# templates/blog/postDetail.html.twig #}

{% extends 'base.html.twig' %}


{% block title %} Your new post {% endblock %}

{% block body %}

<h1 class="title">New Post</h1>

{{ form_start(form)  }}
<section class="form">
  <div class="field">
    <label class="label">Title</label>
    <div class="control">
        {{ form_widget(form.name, { 'attr': {'class': 'input'} }) }}
        {% if error is defined %}
            <ul>
                <li>{{ error.message }}</li>
            </ul>
        {% endif %}
    </div>
  </div>

  <div class="field">
    <label class="label">Content</label>
    <div class="control ">
        {{ form_widget(form.content, { 'attr': {'class': 'textarea'} }) }}
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      {{ form_row(form.submit, { 'label': 'Publish', 'attr': {'class': 'button is-link'}}) }}
    </div>
    <div class="control">
      <a class="button is-link is-light" href="{{ path('index') }}">
        Cancel
      </a>
    </div>
  </div>

  <div class="file has-name is-right">
  <label class="file-label">
    {{ form_widget(form.image, { 'attr': {'class': 'file-input'} }) }}

    <span class="file-cta">
      <span class="file-icon">
        <i class="fas fa-upload"></i>
      </span>
      {{ form_label(form.image,form.image ,{ 'label_attr': {'class': 'file-label'} }) }}
    </span>

  </label>
</div>
</section>
{{ form_end(form) }}

{% endblock %}
