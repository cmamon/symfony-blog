{# templates/blog/postDetail.html.twig #}

{% extends 'base.html.twig' %}

{% block title %} Home {% endblock %}

{% block body %}
{% trans_default_domain 'FOSUserBundle' %}

<section class="content">
    <br><br>
    <div class="container">
        <div class="columns">
            <div class="column" >
                <div class="columns is-mobile is-centered">
                    <div class="column is-half">
                        <h1 class="title">Which blog would you like to visit ?</h1>

                        <div class="buttons" style="overflow: auto;">

                            {% for user in users %}
                            <a
                              class="grey-hover button is-rounded is-info is-outlined is-family-code is-fullwidth"
                              href="{{ path('index', {'username': user.username}) }}">
                                {{user.username}}
                            </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="column" >
                <div class="columns is-mobile is-centered">
                  <div class="column is-half">
                      {{ render(controller('App\\Controller\\PostController::loginAction')) }}
                  </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
