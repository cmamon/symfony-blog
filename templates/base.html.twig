{# templates/base.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="content-type" content="text/html" charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %} Welcome! {% endblock %}</title>
        {% block stylesheets %}
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
            <link rel="stylesheet/less" type="text/css" href="{{ asset('less/styles.less') }}" />
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/less.js/3.0.0/less.min.js" type="text/javascript"></script>
    </head>
    <body>
        <header>{% block header %}{% endblock %}</header>
        {% block body %}{% endblock %}
        <footer>
        {% block footer %}
            <div class="content has-text-centered">
                <p>
                    <strong>Symfony blog</strong> by
                    <a href="https://github.com/cmamon">Christophe QUENETTE</a> and
                    <a href="https://github.com/stremor-03">Sullyvan TREMOR</a>.
                </p>
            </div>
        {% endblock %}
        </footer>
        {% block javascripts %}{% endblock %}
    </body>
</html>
