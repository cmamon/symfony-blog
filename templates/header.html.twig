{# templates/header.html.twig #}
<nav class="navbar is-light" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        {% if app.user %}
        <a class="navbar-item" href="{{ path('index', {'username': app.user.username}) }}">
            Blog
        </a>
        {% endif %}

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBlog">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="navbarBlog" class="navbar-menu">
        <div class="navbar-end">
            <div class="navbar-item">
                <div class="buttons">
                    {% if app.user %}
                    <a class="button is-primary" href="{{ path('logout') }}">
                        <strong>Log out {{app.user.username}} </strong>
                    </a>
                    {% elseif not app.user %}
                    <a class="button is-primary" href="{{ path('register') }}">
                        <strong>Sign up </strong>
                    </a>
                    <a class="button is-light" href="{{ path('login') }}">
                        Log in
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</nav>
